<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/myScript")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Бібліотека", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Головна", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Книги <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-header">Знайди свою книгу</li>
                            <li>@Html.ActionLink("Автори", "ShowAuthor", "Home")</li>
                            <li>@Html.ActionLink("Розділи", "ShowSection", "Home")</li>
                            <li>@Html.ActionLink("Видання", "ShowPublisher", "Home")</li>
                        </ul>
                    </li>
                    @if (!User.IsInRole("librarian"))
                    {
                        <li>@Html.ActionLink("Мої книги", "MyBooks", "Home")</li>
                    }
                    @if (User.IsInRole("librarian"))
                    {
                        <li>@Html.ActionLink("Зареєстровані користувачі", "RegisteredUsers", "LibraryManage")</li>

                        if (User.IsInRole("admin"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Керування <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Додати книгу", "AddBook", "LibraryManage")</li>
                                    <li>@Html.ActionLink("Додати розділ", "AddSection", "LibraryManage")</li>
                                    <li>@Html.ActionLink("Додати видавця", "AddPublisher", "LibraryManage")</li>
                                    <li>@Html.ActionLink("Додати автора", "AddAuthor", "LibraryManage")</li>
                                    <li>@Html.ActionLink("Керувати бібліотекарями", "ManageLibrarians", "LibraryManage")</li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="bottomAlign">
                <footer>
                    <div>&copy; @DateTime.Now.Year - Бібліотека OneLibrary</div>
                </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
