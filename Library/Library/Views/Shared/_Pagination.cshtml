    ViewBag.MaxPage
    ViewBag.currentPage
*@

<div id="pagination" class="text-center">
    @for (int i = 1; i <= ViewBag.MaxPage; i++)
    {
        if (i == ViewBag.currentPage)
        {
            <a class="btn btn-primary" href="@Url.Action("Index", new { id = i })">@i</a>
        }
        else
        {
            <a class="btn btn-default" href="@Url.Action("Index", new { id = i })">@i</a>
        }
    }
</div>