@model List<DBLib.Models.Book>

@if (Model.Count > 0)
{
    <div>
        @{
            foreach (var book in Model)
            {
                <div class="bookBox">
                    <img class="bookTitleImgSm" src="~/TitlePic/@{@book.Id;}.jpg" onerror="imgError(this)" />
                    <div>
                        <h4><b>@book.CutTitle(52)</b></h4>
                        <div>Розділ @book.Section.Name</div>
                        <div>Рік @book.Year</div>
                        <div>Видавництва @book.Publisher.Name</div>
                        @if (book.LibraryReading)
                        {
                        <span class="btn btn-xs btn-warning">Читання в бібліотеці</span>
                        }
                        <p>@Html.ActionLink("Дивитися", "ShowBook", new { id = book.Id }, new { @class = "btn btn-xs btn-primary" })</p>
                    </div>
                </div>
            }
        }
    </div>
    @Html.Partial("_Pagination")
}
else
{
    <h4 class="alertInfo bg-warning text-primary">Книжок не знайдено...</h4>
}