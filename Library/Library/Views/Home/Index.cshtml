        <label for="AscendingRadio"><input id="AscendingRadio" name="sorting" type="radio" />Зростання</label>
    </div>
    <a href="@Url.Action("Authors")">Автори</a> |
    <a href="@Url.Action("Sections")">Розділи</a> |
    <a href="@Url.Action("Publishers")">Видання</a>
