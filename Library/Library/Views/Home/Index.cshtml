@{
    ViewBag.Title = "Бібліотека OneLibrary";
    @model List<DBLib.Models.Book>
}

<div class="jumbotron">

    <div>
        <div class="btn-group">
            <a class="btn btn-default" href="@Url.Action("Index", new { id = ViewBag.currentPage })">Сортувати:</a>
        </div>
        @SortBtn("Title", "Назва ↑")
        @SortBtn("Author", "Автор ↑")
        @SortBtn("Publisher", "Видання ↑")
        @SortBtn("PublicationDate", "Дата видання ↑")
        @SortBtn("AddingDate", "Дата додавання ↑")
    </div>


    <div id="search">
        @using (Html.BeginForm("Search", "Home", null, FormMethod.Post, new { @role = "form", @class = "navbar-form noPadding" }))
        {
            <div class="input-group">
                <input id="searchByTitle" placeholder="Пошук" class="form-control" name="searchString" list="titlesList" />
                <div class="input-group-btn">
                    <button class="btn btn-default">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@Html.Partial("_BooksView", Model)

<datalist id="titlesList">
    @foreach (var book in ViewBag.Titles)
    {
        <option value="@book">Заголовок</option>
    }
    @foreach (var author in ViewBag.AuthorsName)
    {
        <option value="@author">Автор</option>
    }
</datalist>

@helper SortBtn(string sortValue, string title)
{
    <div class="btn-group">
        <a name="sortBtn" class="btn btn-default" href="@Url.Action("Index", new { id = ViewBag.currentPage, sortingBy = sortValue,
            sortingOrder = "ASC" })">@title</a>
            <a name="sortBtn" class="btn btn-default" href="@Url.Action("Index", new { id = ViewBag.currentPage, sortingBy = sortValue,
            sortingOrder = "DESC" })">↓</a>
        </div>
}
