@{
    ViewBag.Title = "Home Page";
    @model List<DBLib.Models.Book>
}

<div class="jumbotron">
    <div>Пошук за назвою</div>
    <div>
        Сортувати за:
        <span>Автором</span> |
        <span>Назвою</span> |
        <span>Виданням</span> |
        <span>Даті видання</span>
        <label for="DescendingRadio"><input id="DescendingRadio" name="sorting" type="radio" />Спадання</label>
        <label for="AscendingRadio"><input id="AscendingRadio" name="sorting" type="radio" />Зростання</label>
    </div>
    <a href="@Url.Action("Authors")">Автори</a> |
    <a href="@Url.Action("Sections")">Розділи</a> |
    <a href="@Url.Action("Publishers")">Видання</a>
</div>
<div class="row">
    @{
        foreach (var book in Model)
        {
    <div style="height: 400px;" class="col-md-4">
        <h3>@book.Title</h3>
        <p>Розділ @book.Section.Name</p>
        <p>Рік @book.Year</p>
        <p>Видавництва @book.Publisher.Name</p>
        <p>Читання в бібліотеці @book.LibraryReading</p>
        <img class="bookTitleImgSm" src="~/TitlePic/@{@book.Id;}.jpg" onerror="imgError(this)" />

        <p>@Html.ActionLink("Дивитися", "ShowBook", new { id = book.Id }, new { @class = "btn btn-xs btn-primary" })</p>
    </div>
            }
        }
</div>
<div class="text-center">
    @for (int i = 1; i <= ViewBag.MaxPage; i++)
    {
        if (i == ViewBag.currentPage)
        {
            <a class="btn btn-primary" href="@Url.Action("Index", new { id = i})">@i</a>
        }
        else
        {
            <a class="btn btn-default" href="@Url.Action("Index", new { id = i})">@i</a>
        }
    }
</div>