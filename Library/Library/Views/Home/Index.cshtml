@{
    ViewBag.Title = "Home Page";
    @model List<DBLib.Models.Book>
}

<div class="jumbotron">
    <div>Пошук за назвою</div>
    <div>
        Сортувати за:
        <span>Автором</span> |
        <span>Назвою</span> |
        <span>Виданням</span> |
        <span>Даті видання</span>
