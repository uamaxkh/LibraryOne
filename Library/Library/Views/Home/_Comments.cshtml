            @using (Html.BeginForm("AddCommnet", "Home", null, FormMethod.Post, new { @role = "form" }))
            {
                <p>
                    @Html.Label("Ваш коментар")
                    @Html.Hidden("bookId", (Guid)ViewBag.bookId)
                    @Html.TextBox("CommentText", null, new { @class = "form-control" })
                </p>
                if (ViewBag.userExist)
                {
                    <button type="submit" class="btn btn-sm btn-primary">Додати коментар</button>
                }
                else
                {
                    @Html.ActionLink("Щоб лишити коментар, необхідно увійти", "Login", "Account", null, new { @class = "btn btn-default" });
