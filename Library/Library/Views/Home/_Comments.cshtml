@model List<DBLib.Models.Comment>

<br>
@if (Model.Count > 0)
{
    foreach (var review in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading text-uppercase">
                @if (@ViewBag.userId == review.ApplicationUser.Id)
                {
                    using (Html.BeginForm("DeleteComment", "Home", null, FormMethod.Post, new { @class="displayInline-block"}))
                    {
                        @Html.Hidden("bookId", (Guid)ViewBag.bookId)
                        <button name="commentId" class = "btn btn-xs btn-danger" value="@review.Id" type="submit">X</button>
                    }

                    
                }
                @review.ApplicationUser.Name @review.ApplicationUser.Surname | @review.Date.ToString("yyyy/MM/dd - HH:mm")
            </div>
            <div class="panel-body">@review.CommentText</div>
        </div>
    }
}
else
{
    <h5 class="alertInfo bg-warning text-primary">Жодного коментаря... Стань першим коментатором!</h5>
}
